@model PlazoFijoSistem.Models.Plazos

@{
    ViewData["Title"] = "Calcular";
}

<h1>Calcular</h1>

<h4>Plazos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Calcular">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dias" class="control-label"></label>
                <input asp-for="Dias" class="form-control" />
                <span asp-validation-for="Dias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BancoId" class="control-label"></label>
                <select asp-for="BancoId" class ="form-control" asp-items="ViewBag.BancoId"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Calcular" class="btn btn-primary" />
            </div>
        </form>
        @ViewBag.Resultado
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

